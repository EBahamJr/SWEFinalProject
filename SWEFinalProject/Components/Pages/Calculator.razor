@page "/calculator"
@rendermode InteractiveServer

<PageTitle>Calculator</PageTitle>
<center>
    <style>
        .row {
            display: flex;
        }

        .column {
            padding: 15px 5px;
            justify-content: center;
            align-content: flex-start;
            color: black;
            flex: 50%;
            flex-direction:column;
        }

        .flex-container {
            display: flex;
            justify-content: flex-start;
            height: 300px;
            background-color: white;
            border-style: solid;
            flex-direction:row;
        }

        .flex-container2 {
            display: flex;
            justify-content: center;
            height: 100px;
            background-color: none;
        }

        .container{
            display: flex;
            justify-content: center;
            border-style: solid;
            background-color: lightgray;
        }

        .button {
            border: black;
            color: lightgrey;
            text-align: center;
            text-decoration: solid;
            -webkit-text-fill-color: black;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-style: solid;
            width: 100%;
        }

            .button:hover {
                background-color: #04AA6D; /* Green */
                color: white;
            }
    </style>
    <h1>Calculator</h1>
    <div class="container">Result: @result</div>
    <div class="flex-container2">
        <div class="column">
            <p role="label">Input A:</p> <input type="number" id="Anum" name="Anum">
        </div>
        <div class="column">
            <p role="label">Input A:</p> <input type="number" id="Bnum" name="Bnum">
        </div>
    </div>
    <div class= "flex-container">
        <div class="column">
            <div class="label container">A and B</div>
            <button type="button" class="button" value="AdditionButton" @onclick="IncrementCount">A + B</button>
        </div>
        <div class="column">
            <div class="label container">A Only</div>
            <button type="button" class="button" value="AbsoluteValue" @onclick="IncrementCount">A!</button>
        </div>
    </div>
</center>

@code {
    

    private int currentCount = 0;

    public float result = 0;

    private void IncrementCount()
    {
        
        currentCount += 1;
    }
}
